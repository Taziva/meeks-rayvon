<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/lightgallery/1.3.9/css/lightgallery.min.css">
    <link rel="stylesheet" href="../stylesheets/style.css">
    <link rel="stylesheet" href="../stylesheets/show.css">
  </head>
  <body>
    <% include ../partials/header %>

    <div class="container">
      <div id ="gallery-page" class="row">
      </div>
    </div>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/lightgallery/1.3.9/js/lightgallery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      for (var i = 1; i < <%= numberOfPics + 1 %>; i++) {
        var element = "<div class='col-lg-3 col-md-4 col-xs-6' data-src='../images/<%= title %>/gallery-images/"+ i + ".jpg'><img src='../images/<%= title %>/gallery-images/"+ i + ".jpg' class='gallery-image img-fluid img-thumbnail' alt='First Image'></div>"
        console.log(element)
        $("#gallery-page").append(element)
      }
        $("#gallery-page").lightGallery({
          download:false
        });
    });
</script>
  </body>
</html>
